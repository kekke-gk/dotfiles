{
    "title": "Switch Zenkaku-Hankaku",
    "rules": [
        {
            "description": "Switch Zenkaku-Hankaku with period-comma(for QWERTY)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "period",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code":  "j",
                            "modifiers": ["left_control", "shift"]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "comma",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code":  "semicolon",
                            "modifiers": ["left_control", "shift"]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Switch Zenkaku-Hankaku with period-comma(for Dvorak)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "e",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code":  "j",
                            "modifiers": ["left_control", "shift"]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "w",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code":  "semicolon",
                            "modifiers": ["left_control", "shift"]
                        }
                    ]
                }
            ]
        }
    ]
}
